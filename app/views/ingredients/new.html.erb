<h1>Ingredients</h1>

<p>These ingredients will define your workflow.</p>

<%= form_for @ingredient, html: { class: "form-inline"} do |f| %>
  <div class="container-fluid">
    <div class="row">
      <div class="form-group">
        <%= f.text_field :name, placeholder: "Enter ingredient name",
                                      class: "form-control", autofocus: true %>
      </div>
      <%= f.submit "Create ingredient", class: "btn btn-default" %>
      <%= link_to "Cancel", ingredients_path %>
    </div>

    <%= render partial: 'shared/error_messages',
                      locals: {ingredient: @ingredient, errors_for: 'name' } %>


    <div class="row">
      <div class="form-group">
        <%= f.select :step, options_for_select(['Team','Ideation','Test','Plan','Design','Develop','Expose','Grow','Exit']), {}, { class: "form-control" }%>
      </div>
    </div>
    <%= render partial: 'shared/error_messages',
                      locals: {ingredient: @ingredient, errors_for: 'step' } %>
  </div>
<% end %>