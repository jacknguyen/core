<h1>Ingredients</h1>
<%= link_to "Add", new_ingredient_path, class: "btn btn-default" %>

<div class="row">
  <% @ingredients.each do |ingredient| %>
    <div class="col-md-1 col-sm-2">
      <h4><%= link_to ingredient.step, edit_ingredient_path(ingredient) %></h4>
    </div>

    <div class="col-md-11 col-sm-10">
      <h4><%= ingredient.name %></h4>
    </div>
  <% end %>
</div>